{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Header</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.name }}</td>
                <td>{{ page.header }}</td>
                <td>{{ page.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': page.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('_new') }}">Create a new page</a>
        </li>
    </ul>
{% endblock %}
